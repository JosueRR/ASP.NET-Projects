
@{
    ViewData["Title"] = "Movies";
}
<h1>@ViewBag.MainTitle</h1>
<div>
    <table class="table">
        <thead>
            <tr>
                <th>Movie title</th>
                <th>Genre</th>
                <th>Release date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Genre</td>
                    <td>@item.ReleaseDate</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <button>I am a button</button>
</div>