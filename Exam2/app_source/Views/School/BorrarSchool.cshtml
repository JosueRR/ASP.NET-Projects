@*
    Form for deleting a school in database
*@

@model app.Models.SchoolModel

@{
    ViewBag.Title = "Borrar School";
}

<html>
<head>
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                @using (Html.BeginForm("BorrarSchool", "School", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <h1 class="text-center mt-5">Are you sure you want to delete this school?</h1>
                    <div class="alert alert-danger mt-4">
                        <p class="fs-5">
                            <strong>Nombre:</strong> @Model.Nombre<br />
                            <strong>Provincia:</strong> @Model.Provincia<br />
                            <strong>Estado:</strong> @Model.Estado<br />
                            <strong>Número de Aulas:</strong> @Model.NumeroAulas<br />
                            <strong>Es Pública:</strong> @Model.EsPublica
                        </p>
                        <strong>
                            <p class="fs-5 text-center">
                            This action cannot be undone.
                            </p>
                        </strong>
                    </div>
                    <div class="text-center mt-4">
                        <input id="delete-btn" type="submit" class="btn btn-danger me-3" value="Yes, I'm sure" />
                        <a class="btn btn-secondary" href="@Url.Action("Index", "School")">No, go back</a>
                    </div>
                    @Html.HiddenFor(model => model.Id)
                }
            </div>
        </div>
    </div>
</body>
</html>